<Page
    x:Class="GiantBombClient.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GiantBombClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:GiantBombClient.Models"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView ItemsSource="{x:Bind HomeViewModel.Videos}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:VideoModel">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{x:Bind Image.ThumbUrl}" />
                        <TextBlock Text="{x:Bind Name}" />
                        <TextBlock Text="{x:Bind VideoShow.Title}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
